{
  "name": "concertina",
  "version": "0.10.0",
  "description": "React toolkit for layout stability.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./accordion": {
      "import": {
        "types": "./dist/accordion.d.ts",
        "default": "./dist/accordion.js"
      },
      "require": {
        "types": "./dist/accordion.d.cts",
        "default": "./dist/accordion.cjs"
      }
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "./dist/styles.css"
  ],
  "scripts": {
    "build": "tsup && cp src/styles.css dist/styles.css",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.0.0",
    "jsdom": "^28.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "radix",
    "accordion",
    "scroll",
    "pin",
    "react",
    "hook",
    "memoization",
    "useSyncExternalStore",
    "layout-stability",
    "stable-slot",
    "resize-observer"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryandward/concertina"
  },
  "author": "Ryan Ward"
}
